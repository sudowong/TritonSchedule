{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "esnext",
    "types": [
      "node"
    ],
    "module": "nodenext",
    "rootDir": "src",
    "outDir": "dist",
    "lib": [
      "ESNext",
      "DOM"
    ],
    "strict": true,
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "skipLibCheck": true,
    "moduleDetection": "force"
  }
}
